  "version": "0.3.0",
  "configurations": [
    {
      "name": "run Mocha test",
      "type": "node",
      "request": "launch",
      "trace": true,
      "disableOptimisticBPs": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "cwd": "${workspaceFolder}/",
      "args": [
        "-t",
        "40000",
        "--require",
        "mocha-steps",
        "${workspaceFolder}/*.test.js"
      ]
    },
    {
      "name": "attach",
      "type": "node",
      "request": "attach",
      "trace": true,
      "disableOptimisticBPs": true,
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}/"
    }
  ]
}
