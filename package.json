{
  "name": "web_ui",
  "version": "0.0.1",
  "description": "lean ui test framework",
  "scripts": {
    "fast": "mocha --require mocha-steps suites/fast/**/**.js",
    "smoke": "mocha --require mocha-steps suites/smoke/**/*.js",
    "regression": "mocha --require mocha-steps suites/regression/**/*.js",
    "pre-commit": "lint-staged",
    "lint": "eslint --fix .",
    "format": "prettier-standard '**/*.json' '**/*.js'"
  },
  "pre-commit": [
    "pre-commit"
  ],
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier-standard",
        "eslint --fix",
        "git add"
      ],
      "*.{json,md}": [
        "prettier-standard",
        "git add"
      ]
    },
    "ignore": []
  },
  "dependencies": {
    "mocha": "7.2.0",
    "mocha-parallel-tests": "2.3.0",
    "mocha-steps": "1.3.0"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-mocha": "^7.0.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "lint-staged": "^7.3.0",
    "pre-commit": "^1.2.2",
    "prettier-standard": "^16.2.1"
  },
  "author": "Evgen Silkov",
  "license": "ISC"
}
